<div class="subscribe-cta">
    <div class="container">
        <div class="row align-center-y">
            <!-- Section Title -->
            <div class=" col-m-6 col-l-3">
                <h2>Suscríbete</h2>
                <p><strong>A tu favorito Anime </strong> Para ver los últimos episodios</p>
            </div>
            <!-- Step 01 -->
            <div class="ti-user cta-column  col-m-6 col-l-3">
                <span class="step">01 <i>paso</i></span>
                <h3>Califica <span>tus películas preferidas</span></h3>
            </div>
            <!-- Step 02 -->
            <div class="ti-view-module cta-column  col-m-6 col-l-3">
                <span class="step">02 <i>paso</i></span>
                <h3>Ver <span>Te recomendaremos lo mejor para ti</span></h3>
            </div>
            <!-- Step 03 -->
            <div class="ti-notifications cta-column  col-m-6 col-l-3">
                <span class="step">03 <i>paso</i></span>
                <h3>Sigue <span>Votando y participando</span></h3>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="row justify-content-center" style="margin-top: 20px; margin-bottom: 20px; height: 100px; font-size: 20pt;">        
        <a id="btnNewRecommendation" href="#" class="btn primary rounded" tabindex="0" role="button" aria-pressed="false" style="height:100px"><img src="img/anime-icon-png-2.jpg" style="height: 90px;" />Me gustarían mas recomendaciones</a>
    </div>
    </div>
    <!-- // Subscribe CTA -->
