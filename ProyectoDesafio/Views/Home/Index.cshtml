    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¡Hola! Ayúdanos a conocerte, dinos que te parecen estos animes</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                </div>
                <div class="modal-body">
                    <div id="smartwizard">
                        <ul>
                            <li><a href="#step-1">Peli 1<br /><small>Calificación 1</small></a></li>
                            <li><a href="#step-2">Peli 2<br /><small>Calificación 2</small></a></li>
                            <li><a href="#step-3">Peli 3<br /><small>Calificación 3</small></a></li>
                            <li><a href="#step-4">Peli 4<br /><small>Calificación 4</small></a></li>
                        </ul>
                        <div>
                            @{int count = 1;}
                            @foreach (var item in Model.SurveyAnimes)
                            {
                                <div id="step-@(count.ToString())">
                                    <div class="row justify-content-center">
                                        <img src="@item.ImgUrl" alt="" class="surveyImg" />
                                        <div style="text-align:center; margin-left:10px">
                                            <h4>¿Qué calificación le darías a este Título?</h4>
                                            <label>@(item.AnimeName)</label>
                                            <div class="rating" data-id="@(item.AnimeId)">
                                                <input type="radio" name="rating@(count.ToString())" value="5" id="5@(count.ToString())"><label for="5@(count.ToString())">☆</label> <input type="radio" name="rating@(count.ToString())" value="4" id="4@(count.ToString())"><label for="4@(count.ToString())">☆</label> <input type="radio" name="rating@(count.ToString())" value="3" id="3@(count.ToString())"><label for="3@(count.ToString())">☆</label> <input type="radio" name="rating@(count.ToString())" value="2" id="2@(count.ToString())"><label for="2@(count.ToString())">☆</label> <input type="radio" name="rating@(count.ToString())" value="1" id="1@(count.ToString())"><label for="1@(count.ToString())">☆</label>

                                            </div>
                                        </div>
                                    </div>
                                    @if (count == 4)
                                    {
                                        <div class="row justify-content-center">
                                            <button id="btnSendResults" type="button" class="btn btn-primary"> Enviar Respuestas </button>
                                        </div>
                                    }
                                </div>

                                count++;
                            }
                        </div>
                    </div>
                </div>
            </div>
